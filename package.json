{
  "name": "repolens",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "postinstall": "turbo run db:generate"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "prisma": "^5.22.0",
    "turbo": "^2.7.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.1.0",
  "dependencies": {
    "@prisma/client": "^5.22.0"
  }
}
