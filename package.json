{
  "name": "repolens",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "postinstall": "turbo run db:generate"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "prettier": "^3.8.1",
    "prisma": "^7.3.0",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.1.0",
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "pg": "^8.17.2"
  }
}
